<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC
        "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <!-- 引入配置信息 -->
    <properties resource="application-generator.properties"/>

    <!-- base部分代码生成 -->
    <context id="baseContext" targetRuntime="Mybatis3Simple" defaultModelType="flat">
        <!--"Mybatis3Simple"  "Mybatis3"-->
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <property name="javaFileEncoding" value="UTF-8"/>

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="com.zhongwang.ibmp.base.common.HmBaseMapper"/>
        </plugin>

        <jdbcConnection driverClass="${jdbc.driver}" connectionURL="${jdbc.url}" userId="${jdbc.username}" password="${jdbc.password}"/>

        <javaModelGenerator targetPackage="com.zhongwang.ibmp.base.entity" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
            <property name="rootClass" value="com.zhongwang.sys.core.common.domain.base.BaseDomain"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="com.zhongwang.ibmp.base.dao" targetProject="src/main/java">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator targetPackage="com.zhongwang.ibmp.base.dao" targetProject="src/main/java" type="XMLMAPPER">
            <!--type="ANNOTATEDMAPPER" "XMLMAPPER" "MIXEDMAPPER"-->
            <!--<property name="rootInterface" value="com.zhongwang.common.mapper.ZWMapper"/>-->
        </javaClientGenerator>
        <table tableName="${table.name}">
            <generatedKey column="pkid" sqlStatement="JDBC" identity="true"/>
        </table>
    </context>
</generatorConfiguration>